<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Dropdown Showhide"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <container
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                    <items jcr:primaryType="nt:unstructured">
                        <dropdown jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            granite:class="cq-dialog-dropdown-showhide"
                            name="./dropdown"
                            fieldLabel="Select to show/hide">
                            <granite:data jcr:primaryType="nt:unstructured"
                                          cq-dialog-dropdown-showhide-target=".showhidetargets" />
                            <items jcr:primaryType="nt:unstructured">
                                <a jcr:primaryType="nt:unstructured"
                                    text="Option A"
                                    value="a"/>
                                <b jcr:primaryType="nt:unstructured"
                                   text="Option B"
                                   value="b"/>
                                <c jcr:primaryType="nt:unstructured"
                                   text="Option C"
                                   value="c"/>
                            </items>
                        </dropdown>
                        <targetA jcr:primaryType="nt:unstructured"
                                 sling:resourceType="granite/ui/components/coral/foundation/container"
                                granite:class="showhidetargets">
                            <granite:data jcr:primaryType="nt:unstructured" showhidetargetvalue="a" />
                            <items jcr:primaryType="nt:unstructured">
                                <textinput jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Target A Input"
                                    name="./targetA"/>
                            </items>
                        </targetA>
                        <targetB jcr:primaryType="nt:unstructured"
                                 sling:resourceType="granite/ui/components/coral/foundation/container"
                                 granite:class="showhidetargets">
                            <granite:data jcr:primaryType="nt:unstructured" showhidetargetvalue="b" />
                            <items jcr:primaryType="nt:unstructured">
                                <textinput jcr:primaryType="nt:unstructured"
                                           sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                           fieldLabel="Target B Input"
                                           name="./targetB"/>
                            </items>
                        </targetB>
                        <targetC jcr:primaryType="nt:unstructured"
                                 sling:resourceType="granite/ui/components/coral/foundation/container"
                                 granite:class="showhidetargets">
                            <granite:data jcr:primaryType="nt:unstructured" showhidetargetvalue="c" />
                            <items jcr:primaryType="nt:unstructured">
                                <textinput jcr:primaryType="nt:unstructured"
                                           sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                           fieldLabel="Target C Input"
                                           name="./targetC"/>
                            </items>
                        </targetC>
                    </items>
            </container>
        </items>
    </content>
</jcr:root>
<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	xmlns:cq="http://www.day.com/jcr/cq/1.0"
	xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
	jcr:primaryType="nt:unstructured" jcr:title="Tabs"
	sling:resourceType="cq/gui/components/authoring/dialog">
	<content jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
		<items jcr:primaryType="nt:unstructured">
			<tabs jcr:primaryType="nt:unstructured"
				sling:resourceType="/libs/granite/ui/components/coral/foundation/tabs">
				<items jcr:primaryType="nt:unstructured">
					<tab1 jcr:primaryType="nt:unstructured"
						jcr:title="Navbar Form Fields"
						sling:resourceType="/libs/granite/ui/components/coral/foundation/container">
						<items jcr:primaryType="nt:unstructured">
							<sitename jcr:primaryType="nt:unstructured"
								sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
								name="./siteName" fieldLabel="Enter Site Name Here" />
							<sitelink jcr:primaryType="nt:unstructured"
								sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
								name="./siteLink" fieldLabel="Enter Site Link Here" />
							<menuItem jcr:primaryType="nt:unstructured"
								sling:resourceType="/libs/granite/ui/components/coral/foundation/form/multifield"
								fieldLabel="Menu Item" composite="{Boolean}true">
								<field jcr:primaryType="nt:unstructured"
									sling:resourceType="/libs/granite/ui/components/coral/foundation/container"
									name="./menuItem" fieldLabel="Add a Menu Item">
									<items jcr:primaryType="nt:unstructured">
									
										<menuText jcr:primaryType="nt:unstructured"
											sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
											name="./menuText" fieldLabel="Enter Menu Item Text Here" />
										<menuLink jcr:primaryType="nt:unstructured"
											sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
											name="./menuLink" fieldLabel="Enter Menu Item Link Here" />
										<submenuItem jcr:primaryType="nt:unstructured"
											sling:resourceType="/libs/granite/ui/components/coral/foundation/form/multifield"
											fieldLabel="Sub Menu Item" composite="{Boolean}true">
											<field jcr:primaryType="nt:unstructured"
												sling:resourceType="/libs/granite/ui/components/coral/foundation/container"
												name="./submenuItem" fieldLabel="Add a sub Menu Item">
												<items jcr:primaryType="nt:unstructured">
													<menuText jcr:primaryType="nt:unstructured"
														sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
														name="./submenuText" fieldLabel="Enter sub Menu Item Text Here" />
													<menuLink jcr:primaryType="nt:unstructured"
														sling:resourceType="/libs/granite/ui/components/coral/foundation/form/textfield"
														name="./submenuLink" fieldLabel="Enter sub Menu Item Link Here" />

												</items>
											</field>
										</submenuItem>
									</items>
								</field>
							</menuItem>
						</items>
					</tab1>
				</items>
			</tabs>
		</items>
	</content>
</jcr:root>
